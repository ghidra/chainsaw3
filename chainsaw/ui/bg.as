package chainsaw.ui{	import flash.display.Sprite;	import flash.geom.ColorTransform;		import chainsaw.ui.scroll_bar;		public class bg extends Sprite	{			public var _bg:Sprite=new Sprite();//holds the whole window		public var _palette:Sprite=new Sprite();//hold the buttons		public var _mask:Sprite=new Sprite();// the mask object		public var _scroll_bar:scroll_bar;				public var _w:Number;		public var _h:Number;				private var corners:Number=10;		private var colorchange:ColorTransform = new ColorTransform();				public function bg():void{//ty:type, t:title, tv:title visible 0 or 1, B:border 0 or 1.			addChild(_bg);			addChild(_palette);			addChild(_mask);			_palette.mask=_mask;		}		public function draw_bg(x:Number=0,y:Number=0,w:Number=40,h:Number=12,c=0xD4D4D4,a:Number=0.4):void{			_w=w;			_h=h;						draw_shape(_bg,x,y,w,h,c,a);			draw_shape(_mask,x,y,w,h,c,a);		}		public function build_scroll(d){			_scroll_bar=new scroll_bar(_w,_h,d,"_palette");			addChild(_scroll_bar);		}		public function bg_color(c=0x444444,a:Number=0.4):void{			colorchange.color = c;			_bg.transform.colorTransform = colorchange;		}		private function draw_shape(o:Sprite,x:Number,y:Number,w:Number,h:Number,c,a:Number):void{			o.graphics.clear();		 	o.graphics.beginFill(c,a); // grey color			o.graphics.drawRoundRect(x, y, w, h, corners, corners); // x, y, width, height, ellipseW, ellipseH		  	o.graphics.endFill();		}	}	}
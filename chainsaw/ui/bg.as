package chainsaw.ui{	import flash.display.Sprite;	import flash.geom.ColorTransform;		import chainsaw.ui.scroll_bar;		public class bg extends Sprite	{			public const base_color=0xB4B4B4;		public const base_color_2=0x444444;		public const base_color_alpha=0.5;		public const base_color_alpha_2=0.5;		public const base_corners:Number=10;				public var color = base_color;		public var color_2 = base_color_2;		public var color_alpha:Number = base_color_alpha;		public var color_alpha_2:Number = base_color_alpha;		public var corners:Number = base_corners;				public var _bg:Sprite = new Sprite();//holds the whole window		public var _palette:Sprite = new Sprite();//hold the buttons		public var _mask:Sprite = new Sprite();// the mask object		public var _scroll_bar:scroll_bar;				public var _w:Number;		public var _h:Number;				private var colorchange:ColorTransform = new ColorTransform();				public function bg():void{//ty:type, t:title, tv:title visible 0 or 1, B:border 0 or 1.			addChild(_bg);			addChild(_palette);			addChild(_mask);			_palette.mask=_mask;		}		public function draw_bg(x:Number=0,y:Number=0,w:Number=40,h:Number=12,c=base_color,a:Number=base_color_alpha,crn:Number=base_corners,c_2=base_color,a_2:Number=base_color_alpha):void{			_w = w;			_h = h;			color = c;			color_alpha = a;			corners = crn;			color_2 = c_2;			color_alpha_2 = a_2;						draw_shape(_bg,x,y,w,h,c,a,crn);			draw_shape(_mask,x,y,w,h,c,a,crn);		}		public function build_scroll(d){			_scroll_bar=new scroll_bar(_w,_h,d,"_palette");			addChild(_scroll_bar);		}		public function bg_color(c=base_color,a:Number=base_color_alpha):void{			colorchange.color = c;			_bg.transform.colorTransform = colorchange;		}		public function draw_shape(o:Sprite,x:Number,y:Number,w:Number,h:Number=12,c=base_color,a:Number=base_color_alpha,crn:Number=base_corners):void{			o.graphics.clear();		 	o.graphics.beginFill(c,a); // grey color			o.graphics.drawRoundRect(x, y, w, h, crn, crn); // x, y, width, height, ellipseW, ellipseH		  	o.graphics.endFill();		}		public function draw_rectangle(o:Sprite,x:Number,y:Number,w:Number,h:Number=12,c=base_color,a:Number=base_color_alpha):void{			o.graphics.clear();		 	o.graphics.beginFill(c,a); // grey color			o.graphics.drawRect(x, y, w, h); // x, y, width, height, ellipseW, ellipseH		  	o.graphics.endFill();			o.mask=_mask;		}	}	}
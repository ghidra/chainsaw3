package chainsaw.ui{  import flash.display.Sprite;  import flash.text.TextField;  import flash.text.TextFieldType;  public class ui_text extends Sprite  {	  public var text_string:TextField=new TextField();	  	  public function ui_text(s:String="",c=0x000000,x:Number=0,y:Number=0,w:Number=40,h:Number=14,t:String="DYNAMIC",hypertext:Boolean=false):void	  {  	  	text_string.type = (t=="DYNAMIC") ? TextFieldType.DYNAMIC : TextFieldType.INPUT;		(hypertext) ? text_string.htmlText = s : text_string.text = s;		text_string.textColor = c;		text_string.x = x;		text_string.y = y;		text_string.width=w;		text_string.height=h;		if(h>14) text_string.wordWrap=true;		addChild(text_string);	  }  }}
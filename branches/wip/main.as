package{	import flash.display.Sprite;	import flash.display.Shape;	import flash.display.Stage;		import flash.events.Event;		import chainsaw.object.scene;	import chainsaw.object.camera;	import chainsaw.object.renderer;	import chainsaw.object.obj;	import chainsaw.object.obj_instance;	import chainsaw.ui.userinput;	public class main extends Sprite	{		public var scene1	:	scene;									//create a scene to hold everything		public var camera1	:	camera;									//camera		public var renderer1:	renderer;								//renderer		public var user1	:	userinput;				//private var the_mang:Number=0;		//-----------------		public function main():void{			var scene1:scene 		= 	new scene();					//set up a scene			var camera1:camera		=	new camera(550,400,380,2,100);	//new camera(Stage.width,Stage.height,380,1,100);			var renderer1:renderer	= 	new renderer(scene1,camera1);	//ret up the renderer			var user1:userinput		=	new userinput(renderer1,stage);			addChild(renderer1);						//scene1._objects.push(camera1);//add the camera to the scene objects			scene1._init = [	["the_mang",obj],/*["planet_01",obj],*/["crazy_head",obj]	];											//array of external objects to load			scene1._inst = [	[0,obj_instance,[0,0,-10]],/*[0,obj_instance,[0,0,0]], */ [1,obj_instance,[10,0,-20]]/*,[1,obj_instance,[0,-5,-30]],[1,obj_instance,[-5,5,-10]],[2,obj_instance,[0,0,0]]*/		];			scene1.init();												//start loding one at a time						addEventListener(Event.ENTER_FRAME, doneloading);			//create enter frame to wait until objs are loaded						function doneloading(e:Event):void{				if(scene1._loaded==true){								//if it is done loading					removeEventListener(Event.ENTER_FRAME,doneloading);	//delete this enterfram					addEventListener(Event.ENTER_FRAME, run);			//create a new enterframe to create file				}			}						function run():void{				user1._refresh();								scene1._scene[0].rotateY(.01);				scene1._scene[0].rotateZ(.01);								//scene1._scene[3].rotateY(.03);				//scene1._scene[3].rotateZ(.03);								renderer1.renderscene();			}					}		//-----------------		//-----------------	}}
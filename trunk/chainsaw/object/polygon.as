package chainsaw.object{	//import chainsaw.math.vector4;		public class polygon extends vector4	{		public var _polycolor	:	String;		public var _normal		:	vector4	=	new vector4();				private var geo 		:	geometry;				public function polygon(g:geometry,pv:Array,col:String):void		{			if(pv.length>2){//if this is a more than a line, a real polygon				//trace("x:"+this._pointlist[pv[0]]+"	y:"+this._pointlist[pv[1]]+"	z:"+this._pointlist[pv[2]])				this._normal.polynormal(g._pointlist[pv[0]], g._pointlist[pv[1]], g._pointlist[pv[2]]);//get normals			}			this._polycolor = col;		}	}}